{
  "parser": "typescript",
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "useTabs": false,
  "overrides": [
    {
      "files": [".*", "*.json"],
      "options": { "parser": "json" }
    },
    {
      "files": ["*.js"],
      "options": { "parser": "typescript" }
    }
  ]
}
